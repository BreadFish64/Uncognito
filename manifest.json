{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "manifest_version": 3,
    "version": "0.2.0",
    "name": "Uncognito",
    "icons": {
        "48": "uncognito.svg"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "uncognito@breadfish64.com"
        },
        "gecko_android": {}
    },
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "action": {
        "default_icon": "uncognito.svg",
        "default_title": "Uncognito"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "incognito": "spanning"
}