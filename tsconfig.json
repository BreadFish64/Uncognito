{
    "include": ["src/**/*"],
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2024",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "noEmitOnError": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext"
    }
}